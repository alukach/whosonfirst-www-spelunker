server {
	listen 80;
	server_name localhost;
	return         301 https://$server_name$request_uri;
}

server {
	listen 443;
	server_name localhost;

	ssl on;
	ssl_certificate __PROJECT_SSLCERT__;
	ssl_certificate_key __PROJECT_SSLKEY__;

	ssl_session_timeout 5m;

	ssl_protocols TLSv1.2;
	ssl_ciphers "ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES256-GCM-SHA384:DHE-RSA-AES128-GCM-SHA256:DHE-DSS-AES128-GCM-SHA256:kEDH+AESGCM:ECDHE-RSA-AES128-SHA256:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA:ECDHE-ECDSA-AES128-SHA:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA:ECDHE-ECDSA-AES256-SHA:DHE-RSA-AES128-SHA256:DHE-RSA-AES128-SHA:DHE-DSS-AES128-SHA256:DHE-RSA-AES256-SHA256:DHE-DSS-AES256-SHA:DHE-RSA-AES256-SHA:!aNULL:!eNULL:!EXPORT:!DES:!RC4:!3DES:!MD5:!PSK";
	ssl_prefer_server_ciphers on;

	location / {
	# location /something-else {

	    proxy_pass http://127.0.0.1:7777;
	    proxy_set_header Host $http_host;
	    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    	    proxy_set_header X-Scheme $scheme;

	    # http://flask.pocoo.org/snippets/35/
	    # proxy_set_header X-Script-Name /something-else;
    	}

	# /data - strictly speaking the stuff around serving static wof-data files
	# should probably be in its own repository.. but today it is not and it is
	# bundled here all wrapped up with the other stuff (20160202/thisisaaronland)
	# 
	# see also:
	# https://www.nginx.com/resources/admin-guide/serving-static-content/

	# http://linuxplayer.org/2013/06/nginx-try-files-on-multiple-named-location-or-server
	#
	# because who knows where the data is at any given moment... this is not a feature
	# but rather just the reality of working through All The Stuff right now...
	# (20150909/thisisaaronland)

	location /data/ {
		sendfile           on;
		sendfile_max_chunk 1m;
		tcp_nopush on;

		try_files $uri @data_local;
        }

	location @data_local {

		root __PROJECT__/data;

	    	add_header 'Access-Control-Allow-Origin' '*';
            	add_header 'Access-Control-Allow-Methods' 'GET';

		proxy_intercept_errors on;
		recursive_error_pages on;
		error_page 404 = @data_s3;
        }

#	location @data_github{
#
#		proxy_set_header       Authorization '';
#		proxy_hide_header      Set-Cookie;
#		proxy_ignore_headers   "Set-Cookie";
#
#	    	add_header 'Access-Control-Allow-Origin' '*';
#           	add_header 'Access-Control-Allow-Methods' 'GET';
#
#		resolver 8.8.8.8;
#	    	proxy_pass https://raw.githubusercontent.com/whosonfirst/whosonfirst-data/master/$uri;
#
#		proxy_intercept_errors on;
#		recursive_error_pages on;
#		error_page 404 = @data_s3;
#	}

	location @data_s3{

		proxy_set_header       Authorization '';
		proxy_hide_header      Set-Cookie;
		proxy_ignore_headers   "Set-Cookie";

	    	add_header 'Access-Control-Allow-Origin' '*';
            	add_header 'Access-Control-Allow-Methods' 'GET';

		resolver 8.8.8.8;
		proxy_pass https://s3.amazonaws.com/whosonfirst.mapzen.com/$uri;
	}
}